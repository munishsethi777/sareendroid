<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginSignUp2Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/textbox_border</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/loginsignup_color_cursor</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ButtonOrange" parent="@android:style/Widget.Button">
        <item name="android:background">@color/OrangeMain</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/details_header</item>
    </style>

    <style name="detailsHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:color">@color/details_header</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="detailsBlock">
        <item name="android:padding">5dp</item>
    </style>

    <style name="detailsText">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/details_text</item>
    </style>

    <style name="details">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="formTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="formInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/form_input_margin</item>
        <item name="android:layout_marginLeft">@dimen/form_input_margin</item>
        <item name="android:layout_marginRight">@dimen/form_input_margin</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ButtonYellow" parent="@android:style/Widget.Button">
        <item name="android:background">@color/button_yellow</item>
    </style>

</resources>
